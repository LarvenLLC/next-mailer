{
  "name": "next-mailer",
  "version": "1.3.1",
  "description": "Intelligent, minimal, server and client side mailer for NextJS, NodeJS and JS Applications and Servers.",
  "author": "BossBele",
  "license": "MIT",
  "repository": "LarvenLLC/next-mailer",
  "types": "types.ts",
  "bugs": {
    "url": "https://github.com/LarvenLLC/next-mailer/issues"
  },
  "keywords": [
    "react",
    "reactjs",
    "next",
    "nextjs",
    "mail",
    "mails",
    "mailer",
    "mailing",
    "node",
    "nodejs",
    "client",
    "server",
    "api",
    "js",
    "javascript",
    "larven"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist",
    "react"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./react": "./react/index.js"
  },
  "scripts": {
    "build": "yarn build:client && yarn build:server",
    "build:client": "microbundle-crl src/react/index.js -o react/index.js --no-compress --format modern,cjs",
    "build:server": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "dependencies": {
    "nodemailer": "^6.7.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1"
  }
}